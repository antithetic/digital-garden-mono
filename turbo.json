{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "inputs": ["$TURBO_DEFAULT$", ".env*"],
        "outputs": ["dist/**"]
      },
      "lint": {
      "dependsOn": ["^lint"]
    },
      "format": {
      "dependsOn": ["^format"]
    },
      "dev": {
        "cache": false,
        "persistent": true
      }
    }
  }